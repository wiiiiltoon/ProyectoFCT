        <Button
            android:id="@+id/botonDatosAlumno"
            android:layout_width="375sp"
            android:layout_height="wrap_content"
            android:text="@string/datos_del_alumno"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            android:background="@drawable/botones"
            android:layout_below="@id/imagenAlumnos"
            android:layout_marginTop="30sp"
            />
        <Button
            android:id="@+id/botonCalificaciones"
            android:layout_width="375sp"
            android:layout_height="wrap_content"
            android:text="@string/calificaciones"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            android:background="@drawable/botones"
            android:layout_below="@id/botonDatosAlumno"
            android:layout_marginTop="20sp"
            />
        <Button
            android:id="@+id/botonAusencias"
            android:layout_width="375sp"
            android:layout_height="wrap_content"
            android:text="@string/ausencia"
            android:textSize="16sp"
            android:textColor="@color/blanco"
            android:background="@drawable/botones"
            android:layout_below="@id/botonCalificaciones"
            android:layout_marginTop="20sp"
            />
        <Button
            android:id="@+id/botonVolver"
            android:layout_width="150sp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/cerrarsession"
            android:onClick="cerrarSesion"
            android:paddingHorizontal="20dp"
            android:text="@string/volver"
            android:textAllCaps="false"
            android:textColor="@color/blanco"
            android:textSize="16sp" />
