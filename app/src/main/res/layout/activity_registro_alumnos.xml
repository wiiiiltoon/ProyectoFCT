<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/azulFondo"
    tools:context=".registroAlumnos">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="40dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/anadirAlumno"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="35dp"
            android:fillViewport="true"
            android:background="@drawable/listaformato">

            <ListView
                android:id="@+id/listaAlumnos"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </ScrollView>

            <Button
                android:id="@+id/anadirAlumno"
                android:layout_width="250sp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/botones"
                android:onClick="anadirAlumno"
                android:text="@string/anadir"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"
                android:textColor="@color/blanco" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>