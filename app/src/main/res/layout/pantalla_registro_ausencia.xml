<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alumno:" />

    <Spinner
        android:id="@+id/spinner_alumnos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Asignatura:" />

    <Spinner
        android:id="@+id/spinner_asignaturas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="8sp"
        android:id="@+id/textoFaltasAsistencia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Faltas de asistencia"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/restarAusencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <TextView
            android:id="@+id/numAusencias"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/negro"
            android:text="0"
            android:inputType="numberDecimal" />
        <Button
            android:id="@+id/sumarAusencia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:inputType="numberDecimal" />
    </LinearLayout>

</LinearLayout>